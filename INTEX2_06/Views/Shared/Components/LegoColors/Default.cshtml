<div class="d-grid gap-2">
    <!-- View All link with all four parameters -->
    <a class="btn btn-outline-secondary"
       asp-controller="Home"
       asp-action="Legostore"
       asp-route-legoCategory=""
       asp-route-legoColor=""
       asp-route-pageNum=""
       asp-route-pageSize="">View All</a>

    <!-- Retrieve current page size from ViewBag -->
    @foreach (string bc in Model ?? Enumerable.Empty<string>())
    {
        <!-- Generate category link with current page size and legoColor -->
        <a class="btn @(bc == ViewBag.SelectedLegoColor ? "btn-primary" : "btn-outline-secondary")"
           asp-controller="Home"
           asp-action="Legostore"
           asp-route-legoCategory="@ViewBag.SelectedLegoCategory"
           asp-route-legoColor="@bc"
           asp-route-pageNum="1"
           asp-route-pageSize="@ViewBag.PageSize">@bc</a>
    }
</div>