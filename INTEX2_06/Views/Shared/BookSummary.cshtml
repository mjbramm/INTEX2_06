@using INTEX2_06.Infrastructure
@{
}
@model Book

<div class="card m-1 p-1">
    <h4>
        @Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end"><small>@Model.Author</small></span>
    </h4>
    <ul>
        <li>Price: @Model.Price</li>
        <li>Pages: @Model.PageCount</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>
        <li>Category: @Model.Category</li>
        <li>Classification: @Model.Classification</li>
    </ul>
    <form id="@Model.BookId" method="post" asp-page="/Cart">
        <input type="hidden" asp-for="BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <button type="submit" class="btn-success btn-sm float-end">Buy</button>
    </form>
    
</div>
