@model OrdersListViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Fraudulent Orders";
}

<table class="table">
    <thead>
        <tr>
            <th>Transaction ID</th>
            <th>Date</th>
            <th>Day of Week</th>
            <th>Time</th>
            <th>Entry Mode</th>
            <th>Amount</th>
            <th>Type of Transaction</th>
            <th>Country of Transaction</th>
            <th>Shipping Address</th>
            <th>Bank</th>
            <th>Type of Card</th>
            <th>Risk of Fraud</th>
            <th>Verified Fraud</th>
            <th>Approve</th>
            <th>Reject</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Orders)
        {
            <tr>
                <td>@t.transaction_ID</td>
                <td>@t.date</td>
                <td>@t.day_of_week</td>
                <td>@t.time</td>
                <td>@t.entry_mode</td>
                <td>@t.amount</td>
                <td>@t.type_of_transaction</td>
                <td>@t.country_of_transaction</td>
                <td>@t.shipping_address</td>
                <td>@t.bank</td>
                <td>@t.type_of_card</td>
                <td>@(t.predict_fraud == 1 ? "True" : "False")</td>
                <td>@(t.fraud == 1 ? "True" : "False")</td>
                <td><button type="submit" class="btn btn-info">Approve</button></td>
                <td><button type="submit" class="btn btn-danger">Reject</button></td>
            </tr>
        }
    </tbody>
</table>
