@model CreateProductViewModel

<h1>Create New Product</h1>
<hr />

<form asp-action="CreateProduct" method="post" class="mt-3">
    <div class="text-danger">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="name" class="form-control" style="margin-bottom:10px;" placeholder="Name of new product" required>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="year" class="form-control" style="margin-bottom:10px;" placeholder="Year" required>
            <span asp-validation-for="year" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="num_parts" class="form-control" style="margin-bottom:10px;" placeholder="Number of parts" required>
            <span asp-validation-for="num_parts" class="text-danger"></span>
        </div>
    </div>

    <!-- Repeat the pattern for other attributes -->
    <!-- For example: -->
    <div class="form-group row">
        <div class="col-sm-10">
            <input asp-for="img_link" class="form-control" style="margin-bottom:10px;" placeholder="Image link" required>
            <span asp-validation-for="img_link" class="text-danger"></span>
        </div>
    </div>

    <!-- Add similar input fields for other attributes -->

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Create Product</button>
            <button type="button" class="btn btn-primary" style="width:auto" onclick="history.back()">Cancel</button>
        </div>
    </div>
</form>

